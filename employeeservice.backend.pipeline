pipeline {
    agent any
    
    triggers {
        pollSCM '* * * * *'
    }
    
    stages {
        stage('build') {
            steps {
                sh 'mvn clean install -DskipTests'
            }            
            
		}
		stage('deploy') {
            steps {
            	export MAVEN_OPTS=-Xmx1024m
                sh 'spring-boot:run'
            }            
            
		}
	}	
}